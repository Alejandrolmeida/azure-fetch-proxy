# Security Configuration for Azure Deployment

# Mandatory API Key - Never deploy without this
API_KEY=your-secure-api-key-here

# Restrict to trusted domains only
ALLOWED_HOSTS=httpbin.org,jsonplaceholder.typicode.com,api.github.com

# Block internal/private networks and metadata services
BLOCKED_HOSTS=localhost,127.0.0.1,169.254.169.254,metadata.google.internal,metadata.azure.com

# Rate limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000
MAX_RESPONSE_SIZE_MB=10

# Logging level for production
LOG_LEVEL=INFO

# Optional: Custom user agent for identification
CUSTOM_USER_AGENT=AzureProxyService/1.0

# Azure specific
AZURE_INSIGHTS_INSTRUMENTATION_KEY=your-app-insights-key
